<div class="card" style="width: auto;">
  <div class="card-header">
    <h2>Sign up</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <!--    <%#= f.label :email %><br />-->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <!--    <%#= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />-->
        <%# if @minimum_password_length %>
        <!--      <br />-->
        <!--      <em><%#= @minimum_password_length %> characters minimum, if changing</em>-->
        <%# end %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"New password (or leave blank) - #{@minimum_password_length} characters minimum, if changing" %>
      </div>

      <div class="field form-group">
        <!--    <%#= f.label :password_confirmation %><br />-->
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirm new password (if changing)" %>
      </div>

      <br>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-success btn-small"  %>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= render "devise/shared/links" %>
